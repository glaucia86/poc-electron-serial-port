{
  "name": "poc-electron-serial-port",
  "productName": "Aplicação POC Porta USB Zoox",
  "version": "1.0.0",
  "description": "Desenvolvimento de uma poc que usa o Electron com a biblioteca serial port",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "./node_modules/.bin/electron-rebuild",
    "package-mac":"electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=app/assets/icons/mac/zoox-icon.icns --prune=true --out=release-builds --darwinDarkModeSupport=true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucia86/poc-electron-serial-port.git"
  },
  "keywords": [
    "electron",
    "nodeJs",
    "serialPort",
    "tutorial",
    "poc",
    "demo",
    "node-usb"
  ],
  "author": "Glaucia Lemos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glaucia86/poc-electron-serial-port/issues"
  },
  "homepage": "https://github.com/glaucia86/poc-electron-serial-port#readme",
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-packager": "^12.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "serialport": "^7.0.2",
    "usb": "^1.3.3"
  }
}
