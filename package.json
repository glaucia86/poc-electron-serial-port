{
  "name": "poc-electron-serial-port",
  "productName": "Porta USB App",
  "version": "1.0.0",
  "description": "Desenvolvimento de uma poc que usa o Electron com a biblioteca serial port",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "build-mac --dir",
    "package-win": "build-windows --dir",
    "package-win-2": "electron-packager . poc-electron-serial-port --overwrite --asar=true --platform=win32 --arch=ia32 --icon=app/assets/icons/win/zoox-icon.ico --prune=true --out=release-builds --version-string.CompanyName=Zoox --version-string.FileDescription=Zoox --version-string.ProductName=\"Porta USB App\"",
    "package-linux": "electron-packager . poc-electron-serial-port --overwrite --asar=true --platform=linux --arch=x64 --icon=app/assets/icons/png/zoox-icon-128x128.png --prune=true --out=release-builds",
    "dist": "build"
  },
  "build": {
    "appId": "poc.electron.serialportapp",
    "productName": "Porta USB App"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucia86/poc-electron-serial-port.git"
  },
  "keywords": [
    "electron",
    "nodeJs",
    "serialPort",
    "tutorial",
    "poc",
    "demo",
    "electron-installer",
    "installer",
    "dmg",
    "serialport",
    "node-usb"
  ],
  "author": "Glaucia Lemos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glaucia86/poc-electron-serial-port/issues"
  },
  "homepage": "https://github.com/glaucia86/poc-electron-serial-port#readme",
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^12.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "serialport": "^7.0.2",
    "usb": "^1.3.3"
  }
}
